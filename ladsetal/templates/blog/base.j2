{% extends "base.j2" %}

{% block og_title %}Lads et al Blogs{% endblock %}
{% block og_description %}Blog Posts made by the lads.{% endblock %}

{% block title %}Lads Et al Blog Posts{% endblock %}

{% block nav_start %}
    <a class="navbar-item" href="{{ url_for("blog_all_tags") }}">
        Tag List
    </a>

    {% if request.user.is_authenticated %}
        <a class="navbar-item" href="{{ url_for("NewBlog") }}">
            New Blog Post
        </a>
    {% endif %}

    <form method="GET" id="search-bar-form" action="{{ url_for("blog_search") }}">
        <input class="input is-rounded" autocomplete="off" id="search-bar" name="search" placeholder="Search blog posts" spellcheck="false" type="search" value="{{ query }}">
    </form>
{% endblock %}
